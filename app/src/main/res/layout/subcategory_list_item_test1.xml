<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="15dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="6dp">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewTextSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_weight="92"
                    android:layout_margin="10dp"
                    android:text="Вы управляете деньгами и финансовыми инстурментами - строите планы по бюджету, управляете активами на бирже и инвестициями фондов"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typeSize"
                    android:id="@+id/c0"
                    android:text="Точно нет"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typeSize"
                    android:id="@+id/c1"
                    android:text="Скорее нет"/>


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typeSize"
                    android:id="@+id/c2"
                    android:text="Не знаю"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typeSize"
                    android:id="@+id/c3"
                    android:text="Скорее да"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/typeSize"
                    android:id="@+id/c4"
                    android:text="Точно да"/>
            </RadioGroup>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>